#
# Development environment for DroneCore based on Fedora 27.
#
# Author: Julian Oes <julian@oes.ch>
#

FROM fedora:27

MAINTAINER Julian Oes <julian@oes.ch>

RUN dnf -y install \
    autoconf \
    automake \
    clang-format \
    colordiff \
    cmake \
    doxygen \
    gcc \
    gcc-c++ \
    git \
    libcurl-devel \
    libtool \
    python \
    tinyxml2-devel \
    redhat-rpm-config \
    rpm-build \
    ruby-devel \
    rubygems \
    which \
    && dnf clean all

RUN gem install --no-ri --no-rdoc fpm;

CMD ["/bin/bash"]

WORKDIR "/root/DroneCore"
